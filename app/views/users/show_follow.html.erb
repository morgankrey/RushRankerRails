<% provide(:title, @title) %>
<div class="row">
   <aside class="span4">
      <section>
         <%= image_tag @user.photo(:thumb) %>
         <h1><%= @user.first_name %> <%= @user.last_name %></h1>
         <span><%= link_to "view profile", @user %></span>
      </section>
      <section>
         <%= render 'shared/user_stats' %>
         <% if @rushees.any? %>
            <div class="rushee_avatars">
               <% @rushees.each do |rushee| %>
                  <%= link_to image_tag(rushee.photo(:thumb)), rushee %>
               <% end %>
            </div>
         <% end %>
      </section>
   </aside>
   <div class="span8">
      <h3><%= @title %></h3>
      <% if @rushees.any? %>
         <ul class="users">
            <%= render @rushees %>
         </ul>
         <%= will_paginate @rushees %>
      <% end %>
   </div>
</div>