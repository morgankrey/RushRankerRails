<li>
   <span class="content"><%= comment.content %></span>
   <div>
      <span class="timestamp">
         Posted <%= time_ago_in_words(comment.created_at) %> ago by <%= comment.user.first_name %> <%= comment.user.last_name%> <% if current_user.admin? or current_user?(comment.user) %>
      | <%= link_to "delete", comment, method: :delete,
                                    data: { confirm: "Sure?" } %>
   <% end %>
      </span>
   </div>
</li>