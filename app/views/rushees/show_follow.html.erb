<% provide(:title, @title) %>
<div class="row">
   <aside class="span4">
      <section>
         <%= image_tag @rushee.photo(:thumb) %>
         <h1><%= @rushee.first_name %> <%= @rushee.last_name %></h1>
         <span><%= link_to "view profile", @rushee %></span>
      </section>
      <section>
         <%= render 'rushee_stats' %>
         <% if @users.any? %>
            <div class="user_avatars">
               <% @users.each do |user| %>
                  <%= link_to image_tag(user.photo(:thumb)), user %>
               <% end %>
            </div>
         <% end %>
      </section>
   </aside>
   <div class="span8">
      <h3><%= @title %></h3>
      <% if @users.any? %>
         <ul class="users">
            <%= render @users %>
         </ul>
         <%= will_paginate @users %>
      <% end %>
   </div>
</div>