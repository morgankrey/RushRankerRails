         <%= button_to "Vote", score_path(@random1.score.id), class: "btn btn-primary btn-large", method: :put %>
      </div>
   </div>
   <div class="span5">
      <%= link_to image_tag("http://img4.wikia.nocookie.net/__cb20131009153844/villains/images/f/f6/Grumpy_Cat.jpg"), score_path(@random2.score.id), method: :put %>
